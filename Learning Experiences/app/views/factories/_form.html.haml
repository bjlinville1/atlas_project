= form_for @factory do |f|
  - if @factory.errors.any?
    #error_explanation
      %h2= "#{pluralize(@factory.errors.count, "error")} prohibited this factory from being saved:"
      %ul
        - @factory.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :region_id
    = f.number_field :region_id
  .actions
    = f.submit 'Save'
