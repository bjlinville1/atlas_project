!!!
%html
  %head
    %title AtlasProject
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    / Fixed navbar
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            / %span.icon-bar
            / %span.icon-bar
          %a.navbar-brand{href: "#"} Atlas Construction
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li{class: "#{is_link_active?('countries')}"}
              = link_to 'Home', root_path
            %li{class: "#{is_link_active?('countries')}"}
              = link_to "Countries", countries_path, id: "country_navbar"
            / %li{class: "#{is_link_active?('regions')}"}
            /   = link_to "Regions", country_regions_path(@country)
          .pull-right
            = participant_login_links
    .container.theme-showcase{role: "main"}
      %p.notice= notice if notice
      %p.alert= alert if alert
      = yield