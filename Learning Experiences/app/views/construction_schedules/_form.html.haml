= form_for @construction_schedule do |f|
  - if @construction_schedule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@construction_schedule.errors.count, "error")} prohibited this construction_schedule from being saved:"
      %ul
        - @construction_schedule.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :building_id
    = f.number_field :building_id
  .field
    = f.label :lot_id
    = f.number_field :lot_id
  .actions
    = f.submit 'Save'
