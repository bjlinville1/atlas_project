= form_for [@country, @region, @master_plan] do |f|
  - if @master_plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@master_plan.errors.count, "error")} prohibited this master_plan from being saved:"
      %ul
        - @master_plan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :region_id
  .field
    = f.label :name
    = f.text_field :name

  .actions
    = f.submit 'Save'
