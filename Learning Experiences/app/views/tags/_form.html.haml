= form_for @tag do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:"
      %ul
        - @tag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :design_id
    = f.number_field :design_id
  .field
    = f.label :category_name
    = f.text_field :category_name
  .actions
    = f.submit 'Save'
