= form_for @country do |f|
  - if @country.errors.any?
    #error_explanation
      %h2= "#{pluralize(@country.errors.count, "error")} prohibited this country from being saved:"
      %ul
        - @country.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
  = f.label :population
  = f.text_field :population
  .field
  = f.label :abbreviation
  = f.text_field :abbreviation
  .field
    = f.label :estimated_occupants_per_single_family_home_unit
    = f.text_field :estimated_occupants_per_single_family_home_unit
  .field
    = f.label :estimated_occupants_per_multi_family_home_unit
    = f.text_field :estimated_occupants_per_multi_family_home_unit
  .field
    = f.label "Percent estimated single family home demand"
    = f.text_field :estimated_single_family_home_demand
  .field
    = f.label "Percent estimated multi family home demand"
    = f.text_field :estimated_multi_family_home_demand
  .field
    = f.label :percent_market_penetration_goal
    = f.text_field :percent_market_penetration_goal
  .field
    = f.label :average_estimated_home_value
    = f.text_field :average_estimated_home_value
  .field
    = f.label :percent_margin
    = f.text_field :percent_margin 

  .actions
    = f.submit 'Save'
