= form_for @development do |f|
  - if @development.errors.any?
    #error_explanation
      %h2= "#{pluralize(@development.errors.count, "error")} prohibited this development from being saved:"
      %ul
        - @development.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :masterplan_id
    = f.number_field :masterplan_id
  .actions
    = f.submit 'Save'
