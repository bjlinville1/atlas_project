= form_for @lot do |f|
  - if @lot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lot.errors.count, "error")} prohibited this lot from being saved:"
      %ul
        - @lot.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :development_id
    = f.number_field :development_id
    / make the deed_id auto increment
  .field
    = f.label :deed_id
    = f.number_field :deed_id
  .actions
    = f.submit 'Save'
