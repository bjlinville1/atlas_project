= form_for @raw_material do |f|
  - if @raw_material.errors.any?
    #error_explanation
      %h2= "#{pluralize(@raw_material.errors.count, "error")} prohibited this raw_material from being saved:"
      %ul
        - @raw_material.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
