= form_for @assembly do |f|
  - if @assembly.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assembly.errors.count, "error")} prohibited this assembly from being saved:"
      %ul
        - @assembly.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
